<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             x:Class="MAUIShowcaseSample.Resources.Styles.ButtonStyles">

    <Style TargetType="Button" x:Key="NavigationButton">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="Padding" Value="10,10,10,10"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="TextColor" Value="{DynamicResource White}"/>
    </Style>

    <Style TargetType="buttons:SfButton" x:Key="BasicButton">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource PrimaryBackground}"/>
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBackground}"/>
        <Setter Property="StrokeThickness" Value="2"/>
    </Style>    
</ResourceDictionary>