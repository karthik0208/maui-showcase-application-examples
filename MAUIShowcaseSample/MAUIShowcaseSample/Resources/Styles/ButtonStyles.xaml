<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIShowcaseSample.Resources.Styles.ButtonStyles">

    <Style TargetType="Button" x:Key="NavigationButton">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="Padding" Value="10,10,10,10"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="TextColor" Value="{DynamicResource White}"/>
    </Style>
    
</ResourceDictionary>