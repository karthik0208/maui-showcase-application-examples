<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIShowcaseSample.Resources.Styles.BorderStyles">

    <Style TargetType="Border" x:Key="IconTile">
        <Setter Property="StrokeShape" Value="RoundRectangle 3,3,3,3"/>
        <Setter Property="WidthRequest" Value="52"/>
        <Setter Property="HeightRequest" Value="52"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="16,0,0,0"/>
    </Style>

    <Style TargetType="Border" x:Key="SummaryBorder">
        <Setter Property="Margin" Value="12,24,12,0"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12,12,12,12"/>
        <Setter Property="StrokeThickness" Value="0"/>
    </Style>    
</ResourceDictionary>