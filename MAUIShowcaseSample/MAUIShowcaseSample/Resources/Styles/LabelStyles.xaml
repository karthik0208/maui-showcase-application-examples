<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIShowcaseSample.Resources.Styles.LabelStyles">

    <Style TargetType="Label" x:Key="SummaryTitle">
        <Setter Property="TextColor" Value="{DynamicResource GrayText}"/>
        <Setter Property="FontFamily" Value="Roboto-Regular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>
    
    <Style TargetType="Label" x:Key="SummaryValue">
        <Setter Property="TextColor" Value="{DynamicResource BlackText}"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="VerticalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Label" x:Key="CardTitle">
        <Setter Property="TextColor" Value="{DynamicResource GrayText}"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalOptions" Value="End"/>
    </Style>

    <Style TargetType="Label" x:Key="CardValue">
        <Setter Property="TextColor" Value="{DynamicResource BlackText}"/>
        <Setter Property="FontFamily" Value="Roboto-Regular"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="VerticalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelHeader">
        <Setter Property="TextColor" Value="{DynamicResource BlackText}"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalOptions" Value="End"/>
    </Style>

    <Style TargetType="Label" x:Key="CardMobile">
        <Setter Property="FontFamily" Value="Roboto-SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{DynamicResource BlackText}"/>
        <Setter Property="VerticalOptions" Value="Start"/>
    </Style>
    
    
    <Style TargetType="Label" x:Key="CardTitleMobile">
        <Setter Property="FontFamily" Value="Roboto-Regular"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="TextColor" Value="{DynamicResource GrayText}"/>
    </Style>
    <Style TargetType="Entry" x:Key="InputStyle">
        <Setter Property="FontFamily" Value="Roboto-Regular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{DynamicResource GrayText}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    
</ResourceDictionary>